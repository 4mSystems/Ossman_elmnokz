<?xml version="1.0" encoding="utf-8"?>


                                                        

    

                 
                                    
                                                                                    
           

    <androidx.cardview.widget.CardView
        android:id="@+id/card_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10w"
        android:layout_marginEnd="@dimen/dp10w"
        app:cardCornerRadius="@dimen/dp15h"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_img" android:tag="layout/item_offer_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_offer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp120h"
                android:tag="binding_1"                                                                                       
                android:scaleType="centerCrop"
                android:src="@drawable/ic_logo"
                                                                        
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp6h"
                android:src="@drawable/ic_close"
                android:tag="binding_2"                                  
                app:layout_constraintStart_toStartOf="@id/img_offer"
                app:layout_constraintTop_toTopOf="@id/img_offer" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

         