<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                                           

                 
                            
                                                                                           
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/fragment_product_details_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp250h"
            android:tag="binding_1"                                                                       
            android:scaleType="centerCrop"
            android:src="@color/overlayBackground"
                                                            
            app:layout_constraintTop_toTopOf="parent" />

        <te.app.ossman_elmonkz.customViews.views.CustomTextViewMedium
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp8h"
            android:tag="binding_2"                                                          
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorPrimaryDark"
                                                                                                                                                    
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_image" />

        <te.app.ossman_elmonkz.customViews.views.CustomTextViewMedium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp8h"
            android:tag="binding_3"                               
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/dark_grey"
            app:layout_constraintTop_toBottomOf="@id/product_price" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         