<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                                           

                 
                            
                                                                                     

                 
                          
                                                           
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/fragment_my_orders_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabBackground="@drawable/tab_color_selector"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextAppearance="@style/TextAppearance.AppCompat.Small"
            app:tabTextColor="@color/colorAccent">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_orders" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/previous_orders" />

        </com.google.android.material.tabs.TabLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="@dimen/dp100w"
            android:layout_height="@dimen/dp100h"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/dp6h"
            android:visibility="gone"                                                                      
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tabs"
            app:lottie_autoPlay="true"
            app:lottie_fileName="empt.json"
            app:lottie_loop="true"  android:tag="binding_1"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_current_orders"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:tag="binding_2"                 
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/tabs"
                                    
                             
            tools:listitem="@layout/item_order" />

    </androidx.constraintlayout.widget.ConstraintLayout>


         