<?xml version="1.0" encoding="utf-8"?>


                                                       
                                                   

    

                 
                                
                                                                        
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" android:tag="layout/layout_navigation_drawer_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">


        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/dl_main_navigation_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/rl_navigation_drawer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_base_action_bar_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                </LinearLayout>


                <FrameLayout
                    android:id="@+id/fl_home_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/ll_base_action_bar_container">

                </FrameLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_navigation_drawer_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@color/colorWhite"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/rl_navigation_drawer_logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8h">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/vv_navigation_drawer_image"
                        android:layout_width="@dimen/dp60h"
                        android:layout_height="@dimen/dp60h"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/dp15w"
                        android:layout_marginTop="@dimen/dp8h"
                        android:scaleType="centerCrop"
                        android:src="@drawable/splash"
                        app:civ_border_color="@color/colorAccent"
                        app:civ_border_width="1dp"
                        android:tag="binding_1"                             />

                    <apps.app.altcompany.customViews.views.CustomTextViewMedium
                        android:id="@+id/tv_user_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vv_navigation_drawer_image"
                        android:layout_marginStart="@dimen/dp15w"
                        android:layout_marginTop="@dimen/dp5h"
                        android:layout_marginEnd="@dimen/dp15w"
                        android:tag="binding_2"                                 
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/black" />

                    <apps.app.altcompany.customViews.views.CustomTextViewMedium
                        android:id="@+id/tv_email_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_user_login"
                        android:layout_marginStart="@dimen/dp15w"
                        android:layout_marginTop="@dimen/dp5h"
                        android:layout_marginEnd="@dimen/dp15w"
                        android:tag="binding_3"                       
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/tv_email_text"
                        android:layout_marginTop="@dimen/dp16h"
                        android:background="@color/colorAccent" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_navigation_drawer_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/grand_logo"
                    android:layout_below="@+id/rl_navigation_drawer_logo"
                    android:layout_marginStart="@dimen/dp10h"
                    android:layout_marginEnd="@dimen/dp10h"
                    android:tag="binding_4"                   
                                            
                                     
                    tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    tools:listitem="@layout/item_menu"
                    tools:orientation="vertical"
                    tools:spanCount="1" />

                <apps.app.altcompany.customViews.grandDialog.GrandImageDialog
                    android:id="@+id/grand_logo"
                    android:layout_width="@dimen/dp50w"
                    android:layout_height="@dimen/dp20h"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/dp6h"
                    android:scaleType="fitXY"
                    android:src="@drawable/by_grand_black" />
            </RelativeLayout>
        </androidx.drawerlayout.widget.DrawerLayout>
    </RelativeLayout>
         