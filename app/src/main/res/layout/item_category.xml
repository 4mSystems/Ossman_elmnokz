<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="itemViewModel"
            type="apps.app.altcompany.pages.auth.register.viewModels.ItemCategoriesViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@{itemViewModel.categoryData.checked?true:false}"
            android:onClick="@{()-> itemViewModel.itemAction()}"
            android:text="@{itemViewModel.categoryData.subCategoriesName}" />
    </LinearLayout>
</layout>