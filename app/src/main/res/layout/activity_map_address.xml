<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.map.MapAddressActivity">

    <data>

        <variable
            name="mapAddressViewModel"
            type="apps.app.altcompany.utils.locations.MapAddressViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_gravity="center"
            android:background="@color/colorAccent">


            <apps.app.altcompany.customViews.views.CustomTextViewMedium
                android:id="@+id/tv_home_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="40dp"
                android:layout_toEndOf="@+id/img_map_submit"
                android:text="@string/address"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp15" />

            <ImageView
                android:id="@+id/img_map_submit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:onClick="@{()->mapAddressViewModel.goBack(context)}"
                android:scaleType="fitXY"
                android:src="@drawable/ic_back_white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_header">

            <com.google.android.gms.maps.MapView
                android:id="@+id/map_view"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:initMap="@{mapAddressViewModel.mMapLatLng}" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_marker_center"
                    android:layout_width="@dimen/dp40w"
                    android:layout_height="@dimen/dp40h"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_location" />

            </LinearLayout>

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/map_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:progressTint="@color/colorPrimary"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:onClick="@{()-> mapAddressViewModel.submit()}"
            android:text="@string/confirmPickUpLocation"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white" />
    </RelativeLayout>
</layout>
